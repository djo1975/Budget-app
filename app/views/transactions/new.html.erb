<!-- app/views/transactions/new.html.erb -->
<h1>New Transaction</h1>

<%= form_with(model: [@category, @transaction], local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, required: true  %>
  </div>

  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount, required: true  %>
  </div>

  <div>
    <%= form.label :transaction_category %>
   <%= form.collection_select :transaction_category_id, Category.all, :id, :name %>

  </div>

  <div>
    <%= form.submit 'Create Transaction' %>
  </div>
<% end %>

<%= link_to 'Back', category_transactions_path(@category) %>
